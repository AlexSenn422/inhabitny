<footer id="site_footer">
  <div id="footer_container">

    <div id="footer_newsletter">
      <span>{{ 'footer.newsletter.newsletter_text_html' | t }}</span>
      <span>
        <form class="form email-signup" action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" novalidate="novalidate">
          <div class="klaviyo_messages">
            <p class="success_message msg success">Thank you! Please check your inbox</p>
            <p class="error_message msg error">Oops! There was an issue. Try again.</p>
          </div>

          <span class="shell">
            <input type="email" name="email" id="k_id_email" placeholder="email address" class="value">
            <input type="hidden" name="g" value="sPJQSi">
            <button type="submit" class="caret btn">sign up</button>
          </span>
        </form>
      </span>
    </div>

    <nav id="footer_nav">
      <ul>
        {% for link in linklists[settings.footer_links_1].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <div id="footer_social">
      <ul>
        {% unless settings.social_instagram_link == blank %}
          <li><a href="{{ settings.social_instagram_link }}" target="_blank"><i class="fa fa-instagram"></i></a></li>
        {% endunless %}
        {% unless settings.social_pinterest_link == blank %}
          <li><a href="{{ settings.social_pinterest_link }}" target="_blank"><i class="fa fa-pinterest"></i></a></li>
        {% endunless %}
        {% unless settings.social_facebook_link == blank %}
          <li><a href="{{ settings.social_facebook_link }}" target="_blank"><i class="fa fa-facebook"></i></a></li>
        {% endunless %}
        {% unless settings.social_twitter_link == blank %}
          <li><a href="{{ settings.social_twitter_link }}" target="_blank"><i class="fa fa-twitter"></i></a></li>
        {% endunless %}
      </ul>
    </div>



    <div id="copyright">
      &copy; {{ 'now' | date: "%Y" }} Inhabit. All rights reserved. <a href="/pages/terms-and-privacy">Terms &amp; Privacy</a>. <a href="/pages/sitemap">Sitemap</a>.
    </div>

  </div>
</footer>
